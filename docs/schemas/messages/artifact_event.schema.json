{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/FHCS-Team/judge/schemas/artifact_event.schema.json",
  "title": "Artifact Uploaded Payload",
  "description": "Payload for `dmoj.artifact.uploaded` events (artifact metadata published by JUDGE).",
  "x-channel": "judge.artifact.created",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "artifact_id": { "type": "string" },
    "artifact_type": { "type": "string" },
    "submission_id": { "type": ["string", "null"] },
    "problem_id": { "type": ["string", "null"] },
    "filename": { "type": "string" },
    "url": { "type": "string" },
    "size": { "type": "integer" },
    "checksum": { "type": "string" },
    "content_type": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "required": ["artifact_id", "filename", "url"]
}
