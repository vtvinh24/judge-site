{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/FHCS-Team/judge/schemas/messages/evaluation_started_event.schema.json",
  "title": "Evaluation Started Payload",
  "description": "Payload for `judge.evaluation.started` events (JUDGE â†’ DMOJ) documenting that an evaluation has begun.",
  "x-channel": "judge.evaluation.started",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "submission_id": { "type": "string" },
    "problem_id": { "type": "string" },
    "queued_at": { "type": ["string", "null"], "format": "date-time" },
    "started_at": { "type": "string", "format": "date-time" },
    "evaluator_id": { "type": ["string", "null"], "description": "Identifier for the evaluator/worker" },
    "worker_info": { "type": "object", "additionalProperties": true, "description": "Optional details about the worker (hostname, container id, capabilities)" },
    "estimated_seconds": { "type": ["number", "null"], "description": "Optional ETA for long-running evaluations" }
  },
  "required": ["submission_id", "problem_id", "started_at"]
}
