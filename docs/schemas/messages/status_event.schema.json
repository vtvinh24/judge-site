{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/FHCS-Team/judge/schemas/status_event.schema.json",
  "title": "Service Status / Heartbeat Payload",
  "description": "Payload for `judge.status` or `dmoj.heartbeat` events to report service health and capacities.",
  "x-channel": "judge.status.update",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "service": { "type": "string" },
    "status": { "type": "string", "enum": ["ok", "degraded", "down"] },
    "workers_free": { "type": "integer" },
    "version": { "type": "string" },
    "features": { "type": "array", "items": { "type": "string" } },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["service", "status", "timestamp"]
}
